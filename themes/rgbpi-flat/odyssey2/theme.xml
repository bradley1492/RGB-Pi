<theme>
    <formatVersion>4</formatVersion>

    <include>./../rgbpi.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.svg</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.svg</path>
      </image>

      <image name="band1" extra="true">
        <color>e20613</color>
      </image>

      <image name="band2" extra="true">
        <color>1d1d1b</color>
      </image>

      <image name="band3" extra="true">
        <color>ef6f0c</color>
      </image>

      <image name="band4" extra="true">
        <color>f2e500</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>ef6f0c</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>ef6f0c</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>ef6f0c</selectorColor>
      </textlist>
    </view>
</theme>
