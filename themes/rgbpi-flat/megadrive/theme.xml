<theme>
    <formatVersion>4</formatVersion>

    <include>./../rgbpi.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.svg</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.svg</path>
      </image>

      <image name="band1" extra="true">
        <color>DCE3E6</color>
      </image>

      <image name="band2" extra="true">
        <color>D5202C</color>
      </image>

      <image name="band3" extra="true">
        <color>C0C1C4</color>
      </image>

      <image name="band4" extra="true">
        <color>212122</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>000000</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>000000</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>000000</selectorColor>
      </textlist>
    </view>
</theme>
