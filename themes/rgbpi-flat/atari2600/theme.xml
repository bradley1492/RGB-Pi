<theme>
    <formatVersion>4</formatVersion>

    <include>./../rgbpi.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.svg</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.svg</path>
      </image>

      <image name="band1" extra="true">
        <color>e27025</color>
      </image>

      <image name="band2" extra="true">
        <color>D4282D</color>
      </image>

      <image name="band3" extra="true">
        <color>D1E0EE</color>
      </image>

      <image name="band4" extra="true">
        <color>222222</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>D4282D</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>D4282D</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>D4282D</selectorColor>
      </textlist>
    </view>
</theme>
