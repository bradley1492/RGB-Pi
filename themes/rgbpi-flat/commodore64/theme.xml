<theme>
    <formatVersion>4</formatVersion>

    <include>./../rgbpi.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.svg</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.svg</path>
      </image>

      <image name="band1" extra="true">
        <color>BBAD93</color>
      </image>

      <image name="band2" extra="true">
        <color>968971</color>
      </image>

      <image name="band3" extra="true">
        <color>FD4120</color>
      </image>

      <image name="band4" extra="true">
        <color>00A0C6</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>00a0c6</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>00a0c6</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>00a0c6</selectorColor>
      </textlist>
    </view>
</theme>
