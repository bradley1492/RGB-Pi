<theme>
    <formatVersion>4</formatVersion>

    <include>./../rgbpi.xml</include>

    <!-- MAIN SYSTEM VIEW -->
    <view name="system">
      <image name="logo">
        <path>./logo.svg</path>
      </image>

      <image name="controller" extra="true">
        <path>./controller.svg</path>
      </image>

      <image name="band1" extra="true">
        <color>c19528</color>
      </image>

      <image name="band2" extra="true">
        <color>2d2d2d</color>
      </image>

      <image name="band3" extra="true">
        <color>383838</color>
      </image>

      <image name="band4" extra="true">
        <color>3f3f3f</color>
      </image>
    </view>

    <!-- BASIC VIEW -->
    <view name="basic">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>c19528</selectorColor>
      </textlist>
    </view>

    <!-- DETAILED VIEW -->
    <view name="detailed">
      <image name="logo">
        <path>./logo.svg</path>
      </image>
      
      <image name="bg_meta_color" extra="true">
        <color>c19528</color>
      </image>
      
      <textlist name="gamelist">
        <selectorColor>c19528</selectorColor>
      </textlist>
    </view>
</theme>
